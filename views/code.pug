doctype html
html
  head
    title=title
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(charset='UTF-8')
    link(rel='stylesheet' href='/__prism.css')
    style.
      html, body {
        margin: 0;
        padding: 0px;
        font-size: 12px;
      }
      pre#code{
        margin: 0;
        padding: 0px;
      }

  body
    pre(id='code')
      code(class='language-' + lang) #{code}

    script(src='/__prism.js')
